<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shaheryarbhatti.polaroidapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActicity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ItemSelelectedActivity"></activity>
        <activity android:name=".activities.PhotoViewStencilActivity"></activity>
        <activity android:name=".activities.DrawingBoardActivity"></activity>
        <activity android:name=".activities.MainActivity"></activity>
        <!--<activity android:name=".activities.SplashActicity" android:theme="@style/SplashTheme"/>-->
    </application>

</manifest>