<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_xxlarge"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/spacing_large"
    android:paddingRight="@dimen/spacing_large">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/likeBtn"
            android:layout_width="@dimen/spacing_xlarge"
            android:layout_height="@dimen/spacing_xlarge"
            android:layout_marginEnd="@dimen/spacing_middle"
            android:tint="@color/light_green_300"
            app:srcCompat="@drawable/ic_thumb_up" />

        <TextView
            android:id="@+id/likeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="12 likes"
            android:textSize="@dimen/font_mlarge"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/grey_40" />

        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/commentBtn"
            android:layout_width="@dimen/spacing_xlarge"
            android:layout_height="@dimen/spacing_xlarge"
            android:layout_marginEnd="@dimen/spacing_middle"
            android:layout_marginStart="@dimen/spacing_large"
            android:tint="@color/light_blue_400"
            app:srcCompat="@drawable/ic_textsms" />

        <TextView
            android:id="@+id/commentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="4 Comments"
            android:textSize="@dimen/font_mlarge"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/grey_40" />

        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/madeBtn"
            android:layout_width="@dimen/spacing_xlarge"
            android:layout_height="@dimen/spacing_xlarge"
            android:layout_marginEnd="@dimen/spacing_middle"
            android:layout_marginStart="@dimen/spacing_large"
            android:tint="#EC4381"
            app:srcCompat="@drawable/ic_pencil" />

        <TextView
            android:id="@+id/madeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="4 Mades"
            android:textSize="@dimen/font_mlarge"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/grey_40" />

    </LinearLayout>


